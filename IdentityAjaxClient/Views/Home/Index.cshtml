@model List<BusinessObjects.Entities.Product>

@{
    ViewData["Title"] = "Home Page";
}

<!-- ✅ THÊM jQuery ở đây -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container-fluid">
    <h2>Product List</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <!-- Rows sẽ được populate bởi JavaScript -->
        </tbody>
    </table>

    <div class="mb-3">
        <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-primary">➕ Create Product</a>

    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        ShowAllProducts();

        function ShowAllProducts() {
            $("table tbody").html("");
            $.ajax({
              url: "http://localhost:5071/api/Products", // ✅ đúng, API đang chạy ở HTTP
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (result, status, xhr) {
                    $.each(result, function (index, value) {
                        $("table tbody").append($("<tr>"));
                        var appendElement = $("table tbody tr").last();
                        appendElement.append($("<td>").html(value["productId"]));
                        appendElement.append($("<td>").html(value["productName"]));
                       appendElement.append($("<td>").html(value["unitsInStock"]));
                        appendElement.append($("<td>").html(value["unitPrice"]));
                        appendElement.append($("<td>").html(
                            "<a href=\"?id=" + value["productId"] + "\"><img src=\"icon/edit.png\" /></a>"
                        ));
                        appendElement.append($("<td>").html(
                            "<img class=\"delete\" src=\"icon/close.png\" />"
                        ));
                    });
                },
                error: function (xhr, status, error) {
                    console.log("Error: " + error);
                }
            });
        }

        $("table").on("click", "img.delete", function () {
            var productId = $(this).closest("tr").find("td:first").text();
            if (confirm("Are you sure you want to delete this product?")) {
                $.ajax({
                   url: "http://localhost:5071/api/Products/" + productId,
                    type: "DELETE",
                    contentType: "application/json",
                    success: function (result, status, xhr) {
                        alert("Product deleted successfully.");
                        ShowAllProducts();
                    },
                    error: function (xhr, status, error) {
                        console.log("Error: " + error);
                    }
                });
            }
        });
    });
</script>
